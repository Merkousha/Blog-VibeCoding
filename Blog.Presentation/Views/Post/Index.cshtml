@model IEnumerable<Blog.Domain.Entities.Post>

@{
    ViewData["Title"] = "پست‌های وبلاگ";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">ایجاد پست جدید</a>
    </p>

    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@post.Title</h5>
                        <p class="card-text">@(post.Content.Length > 100 ? post.Content.Substring(0, 100) + "..." : post.Content)</p>
                        <p class="card-text"><small class="text-muted">نویسنده: @post.Author</small></p>
                        <p class="card-text"><small class="text-muted">تاریخ ایجاد: @post.CreatedAt.ToString("yyyy/MM/dd")</small></p>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Details" asp-route-id="@post.Id" class="btn btn-info">جزئیات</a>
                        <a asp-action="Edit" asp-route-id="@post.Id" class="btn btn-warning">ویرایش</a>
                        <a asp-action="Delete" asp-route-id="@post.Id" class="btn btn-danger">حذف</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 